[core]
	abbrev = 9
	editor = vim
    pager = less -FRSX
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
    graph = log --graph --color --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%C(blue)%x20(%ce)%x20%C(cyan)[gpg:%GK%x20%G?]%C(reset)%n%x20%s%n"
    stat = status -sb
    last = log -1 --stat
    unstage = reset HEAD --
    cached = diff --cached
	a = add
	b = branch --sort=-committerdate
	bm = branch --merged
	bnm = branch --no-merged
	c = commit --verbose
	ca = commit --verbose --amend
	can = commit --verbose --amend --no-edit
	co = checkout
	d = diff
	dn = diff --name-only
	ds = diff --staged
	du = count-objects --verbose --human-readable
	f = fetch
	h = help
	hc = help config
	l = log
	lo = log --pretty=oneline
	lof = log --pretty=fuller
	lol = log --graph --pretty=oneline
	m = merge
	nuke = !git clean -fdx && git submodule foreach git clean -fdx
	p = pull
	pm = fetch origin master:master
	ps = push
	psf = push --force-with-lease
	pr = pull-request
	r = reset
	rh = reset --hard
	ru = reset @{u}
	ruh = reset --hard @{u}
	rb = rebase
	s = status
	sh = show
	st = stash
	sub = submodule
	y = cherry-pick
